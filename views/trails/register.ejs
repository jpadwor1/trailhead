<head>
    <title>Signup Page</title>
    <!-- Add any other head elements (CSS files, etc.) here -->
</head>
<% layout('partials/boilerplate', {authenticated:authenticated}) -%>
<div class="signup-wrapper">
    <div class="container">
    <div class="col-sm-6 col-sm-offset-3">
    
        <h1> Signup</h1>
    
        <% if (messages.error) { %>
            <div class="alert alert-danger"><%= messages.error %></div>
        <% } %>
    
        <!-- LOGIN FORM -->
        <form action="/signup" method="post">
            <div class="form-group">
                <label>Username</label>
                <input type="text" class="form-control" name="username" required>
            </div>
            <div class="form-group">
                <label>Email</label>
                <input id="signupEmail" type="text" class="form-control" autocomplete="email" name="signupEmail" required>
            </div>
            <div class="form-group password-form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password" required>
            </div>
    
            <button type="submit" class="btn btn-lg signup-btn">Signup</button>
        </form>
    
        <hr>
    
        <p>Already have an account? <a href="/login">Login</a></p>
        <p>Or go <a href="/">home</a>.</p>
    </div>
    </div>
    </div>
