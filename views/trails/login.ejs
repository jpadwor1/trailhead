<% layout('partials/boilerplate') -%>
<div class="login-wrapper">
    <div class="container-fluid">
        <div class="login-column col-md-6 col-sm-12">
        
            <h1> Login</h1>

            <!-- LOGIN FORM -->
            <div class="social-logins">
            <a href="/auth/facebook" class="btn btn-primary"><img class="login-icon" src="../images/fbIcon.png" alt="" class="icon"> Facebook</a>

            <a href="/auth/twitter" class="btn btn-info"><img class="login-icon" src="../images/twitterIcon.png" alt="" class="icon"> Twitter</a>

            <a href="/auth/google" id="gSignInWrapper">
                
                
                <div id="customBtn" class="customGPlusSignIn">
                <span class="icon"></span>
                <span class="buttonText">Google</span>
                </div>
            </a>
            </div>
            <form class="login-form" action="/login" method="post">
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" name="email">
                </div>
                <div class="form-group password-form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password">
                </div>
        
                <button type="submit" class="btn btn-lg login-form-btn">Login</button>
            </form>
        
            <hr>
        
            <p>Need an account? <a href="/signup">Signup</a></p>
            <p>Or go <a href="/">home</a>.</p>
        
        
        
        </div>
    </div>
</div>